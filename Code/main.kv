WindowManager:
    LogInOrRegister:
    LogInLayout:
    NewAccountLayout:
    NumberOfGamersLayout:
    OddNumber:
    UserProfile:
    TeamLayoutFourGamers:
    TeamLayoutSixGamers:
    TeamLayoutEightGamers:
    TeamLayoutTenGamers:
    Game_Four_Players:
    Game_Six_Players:
    Game_Eight_Players:
    Game_Ten_Players:





#-------------------Defining Widgets----------------------
<Button>
    font_size: 50
    color: .3, .6, .7,0.1

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    font_size: 50

<Label>
    font_size: 50
    color: 1,1,1,1
    size_hint: 0.2, 0.1
    outline_color: [0.9,0,0]

<TextInput>
    font_size: 50
    size_hint: 0.2, 0.05

<PopUp>
    font_size: 50
    color: .3, .6, .7,1
    size_hint: 0.6, 0.6

<Image>
    allow_stretch: True
    size: self.width, self.height
    keep_ratio: False

#--------------------------Layouts-------------------
<LogInOrRegister>
    name: "CHOOSE"
    Image:
        size: root.width, root.height
        source: 'Bilder/Rasen1.jpeg'

    FloatLayout:
        cols: 1
        size: root.width, root.height

        BackgroundLabel:
            pos_hint: {"center_x":0.5, "center_y": 0.7}
            background_color: 0, 0, 1, 1
            text: "Please choose action!"
            size_hint: 0.70, 0.1
            font_size: 50
        Button:
            text: "Sign In"
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            size_hint: 0.5, 0.05
            #font_size: 50
            on_release:
                app.root.current = "LOGIN"
                root.manager.transition.direction= "right"
        Button:
            text: "Create new account"
            pos_hint: {"center_x": 0.5, "center_y": 0.30}
            size_hint: 0.5, 0.05
            font_size: 50
            on_release:
                app.root.current = "NEW"
                root.manager.transition.direction= "right"




<LogInLayout>
    name: "LOGIN"
    benutzername: benutzername
	passwort: passwort
	check: check
    Image:
        size: root.width, root.height
        source: 'Bilder/Rasen1.jpeg'

	FloatLayout:
		cols:1
        size: root.width, root.height
        BackgroundLabel:
            text: "Please enter username and \npassword of existing account"
            background_color: 0, 0, 1, 1
            halign: "center"
            size_hint: 0.7, 0.15
            font_size: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        BackgroundLabel:
            text: "Username"
            background_color: 0, 0, 1, 1
            pos_hint:{"center_x":0.4, "center_y":0.65}
            size_hint: 0.5, 0.05
            font_size: 50
        TextInput:
            id: benutzername
            multiline:False
            pos_hint:{"center_x":0.5, "center_y":0.6}
            size_hint: 0.7, 0.05
        BackgroundLabel:
            text: "Passwort"
            background_color: 0, 0, 1, 1
            pos_hint:{"center_x":0.4, "center_y":0.5}
            size_hint: 0.5, 0.05
            font_size: 50
        TextInput:
            id: passwort
            multiline:False
            pos_hint:{"center_x":0.5, "center_y":0.45}
            size_hint: 0.7, 0.05

        Button:
            id: check
            text: "Sign In!"
            pos_hint: {"center_x": 0.5, "top": 0.3}
            size_hint: 0.5, 0.05
            on_press: root.logIn()
            font_size: 50
            on_release:
                app.root.current = "PROFILE" if check.text =="True" else "LOGIN"
                root.manager.transition.direction= "right"
                root.manager.screens[5].ids.profile_username.text = root.ids.benutzername.text
                root.manager.screens[5].ids.profile_password.text = root.ids.passwort.text
        Button:
            font_size: 50
            size_hint: 0.5, 0.05
            text: "Go Back!"
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release:
                app.root.current= "CHOOSE"
                root.manager.transition.direction= "left"




<NewAccountLayout>
    name: "NEW"
	neuerbenutzername: neuerbenutzername
	neuerbenutzerkey: neuespasswort
	checkednew: checkednew
    Image:
        size: root.width, root.height
        source: 'Bilder/Rasen1.jpeg'

	FloatLayout:
		cols:1
        size: root.width, root.height
        BackgroundLabel:
            text: "Please enter username and \npassword of new account"
            background_color: 0, 0, 1, 1
            halign: "center"
            size_hint: 0.7, 0.15
            font_size: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
        BackgroundLabel:
            text: "New Username"
            background_color: 0, 0, 1, 1
            pos_hint:{"center_x":0.4, "center_y":0.65}
            size_hint: 0.5, 0.05
            font_size: 50
        TextInput:
            id: neuerbenutzername
            multiline:False
            pos_hint:{"center_x":0.5, "center_y":0.6}
            size_hint: 0.7, 0.05
        BackgroundLabel:
            text: "New password"
            background_color: 0, 0, 1, 1
            pos_hint:{"center_x":0.4, "center_y":0.5}
            size_hint: 0.5, 0.05
            font_size: 50
        TextInput:
            id: neuespasswort
            multiline:False
            pos_hint:{"center_x":0.5, "center_y":0.45}
            size_hint: 0.7, 0.05
        Button:
            id: checkednew
            text: "Create new account!"
            size_hint: 0.5, 0.05
            font_size: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.createnewaccount()
            on_release:
                app.root.current = "LOGIN" if checkednew.text =="True" else "NEW"
                root.manager.transition.direction= "right"
        Button:
            font_size: 50
            text: "Go Back!"
            size_hint: 0.5, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release:
                app.root.current= "CHOOSE"
                root.manager.transition.direction= "left"



#------------------------------Gamer------------------------------------
<NumberOfGamersLayout>
    name: "GAMERS"
    Image:
        size: root.width, root.height
        source: 'Bilder/Rasen1.jpeg'

    FloatLayout:

        cols: 1
        size: root.width, root.height

        BackgroundLabel:
            background_color: 0, 0, 1, 1
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.8}
            font_size: 50
            text: "We want to make sure that every team has the same chances of getting needing-subtitles-drunk."

        BackgroundLabel:
            background_color: 0, 0, 1, 1
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.75}
            font_size: 50
            text: "So the number of gamers has to be even, meaning that the total number of players"

        BackgroundLabel:
            background_color: 0, 0, 1, 1
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.70}
            font_size: 50
            text: "selected below will be divided by two. The minimal number of players is four."

        FloatLayout:

            cols: 2
            size: root.width, root.height

            BackgroundLabel:
                size_hint: 0.2, 0.05
                pos_hint: {"center_x": 0.35, "center_y": 0.5}
                text: "Number of players"
                background_color: 1,0,0, 1
                font_size: 50

            TextInput:
                id: zahl
                pos_hint: {"center_x": 0.65, "center_y": 0.5}
                size_hint: 0.2, 0.05
                multiline: False

        Button:

            pos_hint: {"x": 0.4, "top": 0.2}
            font_size: 50
            text: "GAME ON!!!"

            on_release:
                if zahl.text=="4": app.root.current="TeamFOUR"
                elif zahl.text== "6": app.root.current="TeamSIX"
                elif zahl.text=="8": app.root.current="TeamEIGHT"
                elif zahl.text== "10": app.root.current="TeamTEN"
                else: app.root.current="ODD"
                root.manager.transition.direction= "right"


                root.manager.screens[6].ids.my_Label_four.text = root.ids.zahl.text
                root.manager.screens[7].ids.my_Label_six.text = root.ids.zahl.text
                root.manager.screens[8].ids.my_Label_eight.text = root.ids.zahl.text
                root.manager.screens[9].ids.my_Label_ten.text = root.ids.zahl.text


<OddNumber>
    name: "ODD"
    Image:
        size: root.width, root.height
        source: 'Bilder/Rasen1.jpeg'
    FloatLayout:
        cols:1
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            text: "The number you entered was either less than four or an odd number."
            font_size: 50
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text: "Click the Button below to try again!"
            font_size: 50
        Button:
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            text: "Let me try again!"
            font_size: 50
            on_release:
                app.root.current="GAMERS"
                root.manager.transition.direction= "left"




